<% if(success && success.length) { %> <!--success.length is necessary as success is array so it can be empty also-->
    <div class="alert alert-success alert-dismissable fade show col-6 offset-3" role="alert">
        <%= success %>
        <button type="button" 
        class="btn-close" 
        data-bs-dismiss="alert" 
        aria-label="Close">
    </button>
    </div>
    <% } %>


    <% if(error && error.length) { %> <!--success.length is necessary as success is array so it can be empty also-->
        <div class="alert alert-danger alert-dismissable fade show col-6 offset-3" role="alert">
            <%= error %>
            <button type="button" 
            class="btn-close" 
            data-bs-dismiss="alert" 
            aria-label="Close">
        </button>
        </div>
        <% } %>